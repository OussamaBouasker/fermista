
{% block body %}
<div class="form-wrapper">
    <div class="form-container">
        <h1 class="form-title">Créer une réclamation</h1>

        {{ form_start(form, {'method': 'POST', 'attr': {'class': 'form-group', 'novalidate': 'novalidate'}}) }}

        <div class="form-row">
            <!-- Champ Titre -->
            <div class="form-column">
                {{ form_label(form.titre, "Titre de la réclamation", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {
                    'attr': {
                        'class': 'form-control input-field' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : '')
                    }
                }) }}
                {% if form.titre.vars.errors|length > 0 %}
                    <div class="error-message">{{ form_errors(form.titre) }}</div>
                {% endif %}
            </div>

            <!-- Champ Description -->
            <div class="form-column">
                {{ form_label(form.description, "Description", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control input-field' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : '')
                    }
                }) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="error-message">{{ form_errors(form.description) }}</div>
                {% endif %}
            </div>
        </div>

        <div class="submit-button-container">
            <button class="btn-submit">{{ button_label|default('Soumettre la réclamation') }}</button>
        </div>

        <!-- Bouton Annuler / Retourner à la page d'accueil -->
        <div class="cancel-button-container">
            <a href="{{ path('app_home') }}" class="btn-cancel">Retour à l'accueil</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<!-- Styles CSS -->
<style>
    body {
        background-color:rgb(209, 224, 213);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100vh; /* Hauteur de la fenêtre pour centrer verticalement */
        display: flex;
        justify-content: center; /* Centrer horizontalement */
        align-items: center; /* Centrer verticalement */
        margin: 0;
    }

    .form-wrapper {
        width: 100%;
        max-width: 600px; /* Réduire la largeur maximale pour un meilleur rendu */
    }

    .form-container {
        padding: 40px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        font-size: 2.2rem;
        color: #606C5A;
        margin-bottom: 30px;
        font-weight: bold;
    }

    .form-row {
        display: flex;
        flex-direction: column; /* Les champs seront affichés l'un sous l'autre */
        gap: 25px; /* Ajouter un espacement vertical plus grand */
        margin-bottom: 20px;
    }

    .form-column {
        flex: 1;
        min-width: 350px;
    }

    .form-label {
        display: block;
        font-size: 1.1rem;
        color: #80856D;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .input-field {
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        border: 2px solid #80856D;
        border-radius: 8px;
        background-color: #F0F5F1;
        transition: all 0.3s ease;
    }

    .input-field:focus {
        border-color: #606C5A;
        box-shadow: 0 0 8px rgba(96, 108, 90, 0.5);
        outline: none;
    }

    .is-invalid {
        border-color: #e74c3c;
        background-color: #f8d7da;
    }

    .error-message {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .btn-submit {
        width: auto; /* Réduire la largeur du bouton */
        padding: 12px 20px;
        background-color: #80856D;
        border: none;
        border-radius: 8px;
        font-size: 1.2rem;
        color: white;
        font-weight: bold;
        transition: all 0.3s ease;
        margin-top: 20px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .btn-submit:hover {
        background-color: #606C5A;
        cursor: pointer;
        transform: translateY(-2px);
    }

    .cancel-button-container {
        text-align: center;
        margin-top: 15px;
    }

    .btn-cancel {
        width: auto;
        padding: 12px 20px;
        background-color: #e0e0e0;
        border: none;
        border-radius: 8px;
        font-size: 1.2rem;
        color: #80856D;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-block;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background-color: #c0c0c0;
        cursor: pointer;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .form-container {
            padding: 25px;
        }

        .form-column {
            flex: 1 1 100%;
        }
    }
</style>

{% endblock %}
