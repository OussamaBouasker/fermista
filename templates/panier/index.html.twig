{% extends 'Front/frontbase.html.twig' %}

{% block content %}
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {{ parent() }}
    {% endblock %}
    <style>
        .table {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table th {
            background-color: #f7f7f7;
            color: #333;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .btn-outline-secondary {
            border-color: #ccc;
        }

        .btn-outline-secondary:hover {
            background-color: #f0f0f0;
        }

        .btn-outline-danger {
            border-color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #f8d7da;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .page-header {
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .container-fluid {
            padding: 2rem;
        }
    </style>
</head>

<body>
    {% block body %}
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Fermista</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/produits">Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/panier">üõí Panier (<span id="cart-count">{{ cart_count }}</span>)</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid page-header py-5">
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/shop">Retour √† la boutique</a></li>
        </ol>
    </div>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">üõí Mon Panier</h2>
        {% if panier is empty %}
        <div class="alert alert-warning text-center">Votre panier est vide.</div>
        {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantit√©</th>
                        <th>Sous-total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in panier %}
                    <tr id="item-{{ item.id }}">
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="ms-3">{{ item.name }}</span>
                            </div>
                        </td>
                        <td>{{ item.price }} Dinar</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <button class="btn btn-outline-secondary btn-sm me-2 decrease" data-item-id="{{ item.id }}">-</button>
                                <span id="quantity-{{ item.id }}">{{ item.quantity }}</span>
                                <button class="btn btn-outline-secondary btn-sm ms-2 increase" data-item-id="{{ item.id }}">+</button>
                            </div>
                        </td>
                        <td id="subtotal-{{ item.id }}">{{ (item.price * item.quantity) | number_format(2) }} Dinar</td>
                        <td>
                            <button class="btn btn-outline-danger btn-sm remove" data-item-id="{{ item.id }}">üóë Supprimer</button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <h4 class="font-weight-bold">Total de Panier: <span id="total">{{ total }} Dinar</span></h4>
            <a href="/commandefront/nouvelle" class="btn btn-primary">Commander</a>
        </div>
        {% endif %}
    </div>

    {% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction pour mettre √† jour le total du panier
        function updateTotal() {
            let total = 0;
            document.querySelectorAll('[id^="subtotal-"]').forEach(function (subtotalElement) {
                total += parseFloat(subtotalElement.innerText.replace(' Dinar', '').trim());
            });
            document.getElementById('total').innerText = total.toFixed(2) + ' Dinar';
        }

        // Gestion de l'√©v√©nement de suppression d'un produit
        document.querySelectorAll('.remove').forEach(button => {
            button.addEventListener('click', function () {
                const itemId = this.dataset.itemId;
                const row = document.getElementById('item-' + itemId);
                row.remove();
                updateTotal();  // Recalculer le total apr√®s suppression
                // Mettre √† jour le compte du panier
                const count = document.querySelectorAll('.remove').length;
                document.getElementById('cart-count').innerText = count;
            });
        });

        // Gestion des boutons + et -
        document.querySelectorAll('.decrease').forEach(button => {
            button.addEventListener('click', function () {
                const itemId = this.dataset.itemId;
                const quantitySpan = document.getElementById('quantity-' + itemId);
                let quantity = parseInt(quantitySpan.innerText);
                if (quantity > 1) {  // Eviter la quantit√© n√©gative
                    quantity--;
                    quantitySpan.innerText = quantity;
                    const subtotalSpan = document.getElementById('subtotal-' + itemId);
                    const price = parseFloat(subtotalSpan.innerText.replace(' Dinar', '').trim()) / (quantity + 1);
                    subtotalSpan.innerText = (price * quantity).toFixed(2) + ' Dinar';
                    updateTotal();
                }
            });
        });

        document.querySelectorAll('.increase').forEach(button => {
            button.addEventListener('click', function () {
                const itemId = this.dataset.itemId;
                const quantitySpan = document.getElementById('quantity-' + itemId);
                let quantity = parseInt(quantitySpan.innerText);
                quantity++;
                quantitySpan.innerText = quantity;
                const subtotalSpan = document.getElementById('subtotal-' + itemId);
                const price = parseFloat(subtotalSpan.innerText.replace(' Dinar', '').trim()) / (quantity - 1);
                subtotalSpan.innerText = (price * quantity).toFixed(2) + ' Dinar';
                updateTotal();
            });
        });
    </script>
    {% endblock %}

    {% endblock %}
</body>

</html>
{% endblock %}
