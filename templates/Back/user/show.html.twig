{% extends 'base.html.twig' %}
{% block content %}
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8">
			<title>
				{% block title %}Welcome!
				{% endblock %}
			</title>
			<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
			{% block stylesheets %}
				{{ parent() }}

			{% endblock %}
		</head>
		<body>
			{% block body %}

				<h1>Delete User</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Image</th>
							<td>
								{% if user.image %}
											<img src="{{ asset(user.image) }}" alt="Image de {{ user.firstName }}" class="user-image">
										{% else %}
											<img src="{{ asset('uploads/images/default-avatar.png') }}" alt="default" class="user-image">
										{% endif %}
							</td>
						</tr>

						<tr>
							<th>Prénom</th>
							<td>{{ user.firstName }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ user.lastName }}</td>
						</tr>
						<tr>
							<th>Num Tel</th>
							<td>{{ user.number }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Role</th>
							<td>{{ user.roles|join(' ') }}</td>
						</tr>

					</tbody>
				</table>
				{{ include('Back/user/_delete_form.html.twig') }}
				<a href="{{ path('app_user_index') }}" style="text-decoration: none; color: black; padding-left:950px">back to list</a>


				{% block javascripts %}
					{{ parent() }}
				{% endblock %}

			{% endblock %}
		</body>
	</html>
</body></html>{% endblock %}
