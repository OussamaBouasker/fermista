{% extends 'base.html.twig' %}

{% block title %}Vache
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center mb-4">Vache</h1>

		<div class="card shadow-lg">
			<div
				class="card-header" style="background-color: #6b8e23; color: white;">
				<!-- Changement ici -->
				<h4 class="m-0">Détails de vache</h4>
			</div>
			<div class="card-body">
				<table class="table table-bordered table-striped">
					<tbody>
						<tr>
							<th class="text-left">Id</th>
							<td>{{ vache.id }}</td>
						</tr>
						<tr>
							<th class="text-left">Nom</th>
							<td>{{ vache.name }}</td>
						</tr>
						<tr>
							<th class="text-left">Âge</th>
							<td>{{ vache.age }}</td>
						</tr>
						<tr>
							<th class="text-left">Race</th>
							<td>{{ vache.race }}</td>
						</tr>
						<tr>
							<th class="text-left">État médical</th>
							<td>{{ vache.EtatMedical }}</td>
						</tr>
					</tbody>
				</table>

				<div class="text-center mt-4">
					<a href="{{ path('app_vache_index') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>
				</div>
			</div>
		</div>

		<div class="mt-4">
			{{ include('Back/vache/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
