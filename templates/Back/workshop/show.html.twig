{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ workshop.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workshop.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ workshop.date ? workshop.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ workshop.prix }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ workshop.theme }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ workshop.duration ? workshop.duration|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_workshop_index') }}">back to list</a>

    <a href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">edit</a>

    {{ include('Back/workshop/_delete_form.html.twig') }}
{% endblock %}
