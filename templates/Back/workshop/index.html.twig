{% extends 'base.html.twig' %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {{ parent() }}
        
        {% endblock %}
    </head>
    <body>
        {% block body %}

        <div style="display: flex; justify-content: space-between; align-items: center; padding-left: 50px;">
          <h1 class="display-1 ">Gestion des Workshop</h1>
          <div class="col-sm-6 col-md-4 col-lg-3" style="padding: 10px; size:20px">
              <i class="fa fa-plus-square"></i>
              <a href="{{ path('app_workshop_new') }}" style="text-decoration: none; color: black;">Creation d'un workshop</a>
          </div>
      </div>
      <br>
      <table class="table">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Titre</th>
                  <th>Description</th>
                  <th>Date</th>
                  <th>Prix</th>
                  <th>Theme</th>
                  <th>Duration</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
              {% for workshop in workshops %}
              <tr>
                  <td>{{ workshop.id }}</td>
                  <td>{{ workshop.titre }}</td>
                  <td>{{ workshop.description }}</td>
                  <td>{{ workshop.date ? workshop.date|date('Y-m-d H:i:s') : '' }}</td>
                  <td>{{ workshop.prix }}</td>
                  <td>{{ workshop.theme }}</td>
                  <td>{{ workshop.duration ? workshop.duration|date('H:i:s') : '' }}</td>
                  <td>
                      <button type="button" class="btn btn-success">
                          <a href="{{ path('app_workshop_edit', {'id': workshop.id}) }}" style="text-decoration: none; color: #F2F2F2;">Edit</a>
                      </button>
                      <button type="button" class="btn btn-danger">
                          <a href="{{ path('app_workshop_delete', {'id': workshop.id}) }}" style="text-decoration: none; color: #F2F2F2;">Delete</a>
                      </button>
                  </td>
              </tr>
              {% else %}
              <tr>
                  <td colspan="8">no records found</td>
              </tr>
              {% endfor %}
          </tbody>
      </table>
        {% block javascripts %}
        {{ parent() }}
        {% endblock %}

        {% endblock %}
    </body>
</html>
{% endblock %}
