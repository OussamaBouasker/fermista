{% extends 'base.html.twig' %}
{% block content %}
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8">
			<title>
				{% block title %}Gestion des consultations
				{% endblock %}
			</title>
			<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
			{% block stylesheets %}
				{{ parent() }}

			{% endblock %}
		</head>
		<body>
			{% block body %}
				<div style="display: flex; justify-content: space-between; align-items: center; padding-left: 50px;">
					<h1 class="display-1 ">Gestion des consultations</h1>
					<div class="col-sm-6 col-md-4 col-lg-3" style="padding: 10px; size:20px">
						<i class="fa fa-plus-square"></i>
						<a href="{{ path('app_consultation_new') }}" style="text-decoration: none; color: black;">Create new consultation</a>
					</div>
				</div>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom de la vache</th>
								<th>Date</th>
								<th>Heure</th>
								<th>Lieu</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for consultation in consultations %}
								<tr>

									<td>{{ consultation.id }}</td>
									<td>{{ consultation.nom }}</td>
									<td>{{ consultation.date ? consultation.date|date('Y-m-d') : '' }}</td>
									<td>{{ consultation.heure ? consultation.heure|date('H:i:s') : '' }}</td>
									<td>{{ consultation.lieu }}</td>
									<td>
										<button type="button" class="btn btn-success">
											<a href="{{ path('app_consultations_edit', {'id': consultation.id}) }}" style="text-decoration: none; color: #F2F2F2;">Edit</a>
										</button>
										<button type="button" class="btn btn-danger">
											<a href="{{ path('app_consultations_show', {'id': consultation.id}) }}" style="text-decoration: none; color: #F2F2F2;">Delete</a>
										</button>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				{% block javascripts %}
					{{ parent() }}
				{% endblock %}
			{% endblock %}
		</body>
	</html>
{% endblock %}
