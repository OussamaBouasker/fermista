{{ form_start(form, {'attr': {'class': 'form-group', 'novalidate': 'novalidate'}}) }}

<!-- Champ Titre -->
<div class="mb-3" style="gap: 20px; width:600px">
    {{ form_label(form.titre, "Titre de la réclamation", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.titre, {
        'attr': {
            'class': 'form-control' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : ''),
            'placeholder': 'Entrez le titre'
        }
    }) }}
    <div class="invalid-feedback">
        {{ form_errors(form.titre) }}
    </div>
</div>

<!-- Champ Description -->
<div class="mb-3" style="gap: 20px; width:600px">
    {{ form_label(form.description, "Description", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.description, {
        'attr': {
            'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''),
            'placeholder': 'Décrivez votre réclamation'
        }
    }) }}
    <div class="invalid-feedback">
        {{ form_errors(form.description) }}
    </div>
</div>

<!-- Champ Status -->
<div class="mb-3" style="gap: 20px; width:600px">
    {{ form_label(form.status, "Statut de la réclamation", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.status, {
        'attr': {
            'class': 'form-select' ~ (form.status.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    <div class="invalid-feedback">
        {{ form_errors(form.status) }}
    </div>
</div>

<!-- Champ Date de Soumission -->
<div class="mb-3" style="gap: 20px; width:600px">
    {{ form_label(form.dateSoumission, "Date de soumission", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.dateSoumission, {
        'attr': {
            'class': 'form-control' ~ (form.dateSoumission.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    <div class="invalid-feedback">
        {{ form_errors(form.dateSoumission) }}
    </div>
</div>

<!-- Champ Utilisateur -->
<div class="mb-3" style="gap: 20px; width:600px">
    {{ form_label(form.user, "Utilisateur concerné", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.user, {
        'attr': {
            'class': 'form-select' ~ (form.user.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    <div class="invalid-feedback">
        {{ form_errors(form.user) }}
    </div>
</div>

<!-- Bouton Soumettre -->
<button class="btn btn-outline-dark btn-fw">{{ button_label|default('Soumettre la réclamation') }}</button>

{{ form_end(form) }}
