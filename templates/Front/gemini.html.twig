{% extends 'base.html.twig' %}

{% block title %}Résultat Gemini{% endblock %}

{% block body %}
    <h1>Texte généré par Gemini</h1>

    <p><strong>Mots-clés :</strong> {{ keywords }}</p>

    <div style="border: 1px solid #ccc; padding: 10px; margin-top: 10px;">
        <p>{{ generatedText }}</p>
    </div>

    <form method="get" action="{{ path('app_gemini') }}">
        <label for="keywords">Mots-clés :</label>
        <input type="text" id="keywords" name="keywords" value="{{ keywords }}" required>
        <button type="submit">Générer</button>
    </form>
{% endblock %}
