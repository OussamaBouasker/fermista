{% extends 'Front/frontbase.html.twig' %}

{% block title %}Mes Vaches{% endblock %}

{% block body %}
<div class="container mt-5" style="margin-top: 150px; position: relative;">
    <div class="row justify-content-center" style="margin-top: 150px;" >
        {% for vache in vaches %}
        <div class="col-md-4 mb-4 d-flex justify-content-center">
            <div class="card" style="width: 80rem; margin: 40px;">
                <div class="card-body">
                    <h5 class="card-title" style="color: #6B8E23; text-transform: uppercase;">{{ vache.name }}<br></h5>
                    <p class="card-text">
                        <strong>Age:</strong> {{ vache.age }}<br>
                        <strong>Race:</strong> {{ vache.race }}<br>
                        <strong>État Médical:</strong> {{ vache.etatMedical }}
                    </p>
                    <div class="text-center">
                        <a href="{{ path('app_dashboard', {'id': vache.id}) }}" class="btn btn-primary">Analyse</a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center" role="alert">
                Aucune vache disponible
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Bouton circulaire en bas de la page -->
    <div style="position: fixed; bottom: 20px; right: 20px;">
        <a href="{{ path('app_vache_new') }}" class="btn" style="background-color: #6B8E23; color: white; border-radius: 50%; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; font-size: 24px;">+</a>
    </div>
</div>
{% endblock %}